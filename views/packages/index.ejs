<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/activities/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1 class="title"><%= title %> </h1>
  <% if (user) { %>
      <a href="/packages/new">
        <button class= "new">Add Package</button>
      </a>
  <% } %>
  <div class="container py-3 px-3">
    <div class="row row-cols-2 row-cols-md-3 g1 px-4">
      <% packages.forEach(vacationPackage => { %>
          <div class="col">
              <div class="card mb-4 shadow-sm">
                <div class="card-body">
                  <h1><strong>Vacation Package</strong></h1>
                  <% if(vacationPackage.destination === "Kathmandu"){%>
                    <img class="card-img-top" src="https://i.imgur.com/Pe0I4Li.jpg" alt="Ktm">
                  <% } else if(vacationPackage.destination === "Pokhara"){ %>
                    <img class="card-img-top" src="https://i.imgur.com/HvxYfJS.png" alt="Pokhara">
                  <% } else { %>
                    <img class="card-img-top" src="https://i.imgur.com/JtYtusZ.jpg" alt="Chitwan">
                  <% } %>
                  <p><strong>Destination: </strong><%= vacationPackage.destination  %></p>
                  <p><strong>Duration:</strong> <%= vacationPackage.duration  %> weeks</p>
                  <p><strong>Tour Guide: </strong> <%= vacationPackage.tourGuide  %></p>
                  <p><strong>Trip Date: </strong><%= vacationPackage.tripDate  %></p>
                  <a href="/packages/<%= vacationPackage._id %>">DETAILS</a>
                </div>
              </div>
          </div>
      <% }) %>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>