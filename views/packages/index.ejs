<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1 class="title"><%= title %> </h1>
  <% if (user) { %>
      <a href="/packages/new">
        <button class= "new">Add Package</button>
      </a>
  <% } %>
  <div class="container py-5 px-3">
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g1 px-4">
      <% packages.forEach(vacationPackage => { %>
          <div class="col">
              <div class="card mb-4 shadow-sm">
                <div class="card-body">
                  <h1 class="card-title fs-1 text-dark"><strong>Vacation Package</strong></h1>
                  <p class="card-title fs-2 text-dark"><strong>Destination: </strong><%= vacationPackage.destination  %></p>
                  <p class="card-title fs-2 text-dark"><strong>Duration:</strong> <%= vacationPackage.duration  %> weeks</p>
                  <p class="card-title fs-2 text-dark"><strong>Tour Guide: </strong> <%= vacationPackage.tourGuide  %></p>
                  <p class="card-title fs-2 text-dark"><strong>Trip Date: </strong><%= vacationPackage.tripDate  %></p>
                  <a class="card-title fs-2 text-dark" href="/packages/<%= vacationPackage._id %>">DETAILS</a>
                </div>
              </div>
          </div>
      <% }) %>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>