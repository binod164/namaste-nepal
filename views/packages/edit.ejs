<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/packages/new.css" />
<%- include('../partials/nav') %>

  <main>
    <h1 class ="title"><%= title %></h1>
    <form id="new-form" action="/packages/<%= vacationPackage._id %>?_method=PUT" method="POST">
      <label for ="destination-select">Destination:</label>
      <select name="destination" value="<%= vacationPackage.destination %>">
        <option value="<%= vacationPackage.destination %>"><%= vacationPackage.destination %></option>
        <option value="Kathmandu">Kathmandu</option>
        <option value="Chitwan">Chitwan</option>
        <option value="Pokhara">Pokhara</option>
      </select>
      <label for ="duration-input">Duration:</label>
      <input type="number" name="duration" value="<%= vacationPackage.duration %>" required>
      <label for ="tourGuide-select">Tour Guide:</label>
      <select name="tourGuide">
        <option value="<%= vacationPackage.tourGuide %>"> <%= vacationPackage.tourGuide %> </option>
        <option value="Jhilke">Jhilke</option>
        <option value="Rajesh">Rajesh Hamal</option>
        <option value="Kale" >Kale Dai</option>
        <option value="Dhamala">Dhamala</option>
      </select>
      <label for ="tripDate-input">Trip Date:</label>
      <input type="date" name="tripDate" value="<%= vacationPackage.tripDate %>" required>
      <button type="submit">Save Package</button>
    </form>
  </main>
  
<%- include('../partials/footer') %>