<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/packages/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Destination</div>
    <div><%= vacationPackage.destination %></div>
    <div>Duration</div>
    <div><%= vacationPackage.duration %></div>
    <div>Tour Guide</div>
    <div><%= vacationPackage.tourGuide %></div>
    <div>Departs</div>
    <div><%= vacationPackage.departs %></div>
  </section>
  <% if (vacationPackage.owner.equals(user?.profile._id)) { %>
    <form action="/packages/<%= vacationPackage._id %>/edit" method="GET">
      <button class="btn" type="submit">Edit this Package</button>
    </form>
    <form action="/packages/<%= vacationPackage._id %>?_method=DELETE" method="POST">
      <button class="btn" type="submit">Delete this Package</button>
    </form>
  <% } %>
</main>
  
<%- include('../partials/footer') %>